p, h1, h2, h3, h4, h5, h6
  padding-bottom 10px
h1, h2, h3, h4, h5, h6
  font-weight 900

p
  font-size 1.1rem
  line-height 2rem
  padding-bottom 2rem
em
  margin 0 auto
.article
  padding: 5rem 0;
  color gray
  +below(rupture.desktop-cutoff)
    padding 3rem 0

.article-title
  color light-gray
  font-size 3rem
  padding-top 3rem
  padding-bottom 1rem
  text-align center
  text-transform uppercase
  +below(rupture.desktop-cutoff)
    font-size 2rem
    padding-top 1rem


.article-subtitle
  padding-bottom 2rem
  color light-gray
  text-align center
  font-weight 400

.jumbo-image
  display block
  position relative
  height 100%
  background-repeat no-repeat
  background-size cover
  background-position center center
